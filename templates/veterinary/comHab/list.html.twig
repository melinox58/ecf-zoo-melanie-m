{% extends 'baseDash.html.twig' %}

{% block title %}Liste des rapports{% endblock %}

{% block body %}
    <div class="containerAdmin">
        <div class="row dash">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border bg-white p-2">
                <h4>Liste des rapports vétérinaires</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        
                            <tr>
                                <th>Nom de l'habitat</th>
                                <th>Commentaire</th>
                                <th>Date</th>
                                <th>Employé</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for report in reports %}
                                <tr>
                                    <td>{{ report.idHabitats.name }}</td>
                                    <td>{{ report.comment }}</td>
                                    <td>{{ report.date|date('d/m/Y') }}</td>
                                    <td>{{ report.employee.firstName }} {{ report.employee.lastName }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
