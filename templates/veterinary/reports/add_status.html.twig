{% extends 'baseDash.html.twig' %}

{% block title %}État des animaux{% endblock %}

{% block body %}
<div class="containerAdmin">
    <div class="row dash">
        {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border bg-white p-2">
            <h4>Ajouter un statut pour {{ animal.nameAnimal }}</h4>
            {{ form_start(form) }}
            
            <!-- Affichage uniquement de la date du rapport -->
            <div class="form-group">
                <label for="date">{{ form_label(form.date) }}</label>
                <div>{{ form_widget(form.date) }}</div>
            </div>
            
            <!-- Affichage uniquement de l'état de l'animal -->
            <div class="form-group">
                <label for="state">{{ form_label(form.state) }}</label>
                <div>{{ form_widget(form.state) }}</div>
            </div>
            
            {{ form_end(form) }}
        </main>
    </div>
</div>
{% endblock %}
