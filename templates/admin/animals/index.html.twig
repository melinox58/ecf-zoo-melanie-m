{% extends 'base.html.twig' %}

{% block title %}Modifier un habitat{% endblock %}


{% block body %}

    <div class="containerAdmin">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border bg-white p-2">
                <h4>Modifier un animal</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Race</th>
                            <th>Description</th>
                            <th>Habitat</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for animal in animals %}
                            <tr>
                                <td>{{ animal.nameAnimal }}</td>
                                <td>{{ animal.breed}}</td>
                                <td>{{ animal.description}}</td>
                                <td>{{ animal.idHabitats.name }}</td>
                                {# <td>{{ animal.idHabitats.idImage}}</td> #}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>  
            </main>
        </div>
    </div>

{% endblock %}