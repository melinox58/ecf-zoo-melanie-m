{% extends 'base.html.twig' %}

{% block title %}Modifier un habitat{% endblock %}

{% block body %}

    <div class="containerAdmin">
        <div class="row">

            {% include "_partials/_adminnav.html.twig" %}

            <main class="col-9 border bg-white p-2">
                <h4>Modifier un animal</h4>
                <table class="table">
                    <a href="{{ path('admin_anim_add') }}" class="btn btn-success">Ajouter un animal</a>

                    <!-- Formulaire de filtrage -->
                    <form method="get" class="mb-3">
                        <div class="form-group">
                            <label for="breed">Filtrer par race</label>
                            <select id="breed" name="breed" class="form-control">
                                <option value="">Sélectionner une race</option>
                                {% for race in races %}
                                    <option value="{{ race.breed }}">{{ race.breed }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Filtrer</button>
                    </form>

                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Race</th>
                            <th>Description</th>
                            <th>Habitat</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for animal in animals %}
                        <tr>
                            <td>{{ animal.nameAnimal }}</td>
                            <td>{{ animal.breed }}</td>
                            <td>{{ animal.description }}</td>
                            <td>{{ animal.idHabitats.name }}</td>
                            <td>
                                {% if animal.images|length > 0 %}
                                    {# <p>{{ animal.images[0].getFilePath }}</p> <!-- Affiche le chemin de l'image pour vérifier --> #}
                                    <img src="{{ asset('uploads/animals/mini/250x250-' ~ animal.images[0].getFilePath) }}" alt="{{ animal.nameAnimal }}" class="img-thumbnail" width="100">
                                {% else %}
                                    <p>Aucune image disponible</p>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_anim_modif', { id: animal.id }) }}" class="btn btn-warning">Modifier</a>
                                <form action="{{ path('admin_anim_delete', { id: animal.id }) }}" method="post" onsubmit="return confirm('Es-tu sûr de vouloir supprimer cet animal?');" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>   
            </main>
        </div>
    </div>

{% endblock %}
