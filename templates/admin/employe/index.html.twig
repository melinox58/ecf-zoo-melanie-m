{% extends 'base.html.twig' %}

{% block title %}Modifier un employé{% endblock %}


{% block body %}

    <div class="containerAdmin">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border bg-white p-2">
                <h4>Modifier un(e) employé(e)</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>E-mail</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.name}}</td>
                                <td>{{ user.firstName}}</td>
                                <td>{{ user.email}}</td>
                                <td>{% for role in user.roles %}
                                        {% if role == "ROLE_ADMIN" %}
                                            {% set name = "Administrateur" %}
                                        {% elseif role == "ROLE_EMPLOYEE"%}
                                            {% set name = "Employé(e)" %}
                                        {% elseif role == "ROLE_VETERINARY"%}
                                            {% set name = "Vétérinaire" %}
                                        {% else %}
                                            {% set name = none %}
                                        {% endif %}
                                        <span class="badge">{{ name }}</span>
                                    {% endfor %}</td>
                                <td>
                                    <a href="{{ path('admin_employee_edit',
                                    {id: user.id}) }}" class="btn btn-success">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>  
            </main>
        </div>
    </div>

{% endblock %}