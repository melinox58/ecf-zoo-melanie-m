{% extends 'baseDash.html.twig' %}

{% block title %}Ajouter un service{% endblock %}


{% block body %}

{% if app.session.flashBag.has('error') %}
    <div class="alert alert-danger">
        {% for message in app.session.flashBag.get('error') %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endif %}

    {% if is_granted('ROLE_ADMIN') %}

    <div class="containerAdmin">
        <div class="row dash">
            {% include "_partials/_adminnav.html.twig" %}

            <main class="col-9 border bg-white p-2">
                <h1>Ajouter un nouveau service</h1>

                   {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.image) }}
                    {{ form_end(form) }}

            </main>
        </div>
        <a class="btn btn-secondary mt-3" href="{{ path('app_admin_serv') }}">Retour Ã  la liste</a>
    </div>
    {% endif %}

{% endblock %}
