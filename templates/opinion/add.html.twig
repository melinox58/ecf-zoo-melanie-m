{% extends 'base.html.twig' %}

{% block title %}Liste des Horaires{% endblock %}

{% block body %}
    <div class="containerAdmin">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border bg-white p-2">
                <h4>Liste des horaires</h4>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                <table class="table">
                    <thead>
                        <tr>
                            <th>Pseudo</th>
                            <th>Titre</th>
                            <th>Commentaire</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for opinion in opinions %}
                        <tr>
                            <td>{{ opinion.pseudo }}</td>
                            <td>{{ opinion.title }}</td>
                            <td>{{ opinion.comment }}</td>
                            <td>
                                <a href="{{ path('opinion_edit', {id: opinion._id}) }}">Modifier</a>
                                <form action="{{ path('opinion_delete', {id: opinion._id}) }}" method="post" onsubmit="return confirm('Es-tu sÃ»r de vouloir supprimer cet avis ?');" style="display:inline;">
                                    <button type="submit">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('add_opinion') }}" class="btn btn-success">Ajouter un avis</a>
            </main>
        </div>
    </div>
{% endblock %}
