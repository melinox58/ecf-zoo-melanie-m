<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Zoo Arcadia{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">

        {% block stylesheets %}
            <!-- Préchargement et chargement des styles -->
            <link rel="preload" href="{{ asset('styles/app.css') }}" as="style">
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">            
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lemon&display=swap">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lemonada:wght@300..700&display=swap">
        {% endblock %}
        
        {% block importmap %}
            {{ importmap('app') }} <!-- Assurez-vous que l'importmap fonctionne correctement -->
        {% endblock %}
    </head>
    <body>
        {% include "_partials/header.html.twig" %}

        {% block body %}
            {% if app.session.flashbag.has('succes') %}
                <div class="alert alert-success">
                    {{ app.session.flashbag.get('succes') | first }}
                </div>
            {% endif %}
        {% endblock %}

        {% include "_partials/footer.html.twig" %}
        
        {% block javascript %}
            <!-- Scripts JS, déjà avec defer -->
            <script src="{{ asset('script/stars.js') }}" defer></script>
            <script src="{{ asset('script/schedules.js') }}" defer></script>
            <script src="{{ asset('script/views.js') }}" defer></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" defer></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" defer></script>
        {% endblock %}
    </body>
</html>
